{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "wy-music",
  "version": "0.4.1",
  "identifier": "com.wy-music",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "音乐",
        "width": 330,
        "height": 330,
        "decorations": false,
        "resizable": false,
        "acceptFirstMouse": true,
        "shadow": true,
        "transparent": true
      }
    ],
    "security": {
      "csp": "default-src 'self' asset: https://* http://* ipc: http://ipc.localhost; style-src 'self' 'unsafe-inline'; img-src 'self' https://* http://* asset: http://asset.localhost data: blob:; media-src 'self' asset: https://* http://* http://asset.localhost blob:",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APPDATA/*",
          "$HOME/Music/WYMusic/*"
        ]
      }
    }
  },
  "bundle": {
    "resources": [
      "Info.plist"
    ],
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}